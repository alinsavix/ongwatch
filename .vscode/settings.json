{
    // runs pylance in basic mode, because mypy is gonna do most of the work
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingTypeStubs": "none"
        // annoying because it makes .relative imports throw errors
        // "reportImportCycles": "none"
    },
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "flake8.importStrategy": "fromEnvironment",
    "workbench.colorCustomizations": {
        "sash.hoverBorder": "#ffc04d",
        "statusBar.background": "#ffae1a",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#e69500",
        "statusBarItem.remoteBackground": "#ffae1a",
        "statusBarItem.remoteForeground": "#15202b"
    },
    "peacock.color": "#ffae1a",
    "chat.promptFiles": true
}
